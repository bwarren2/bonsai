<div class="container">
  <div class="jumbotron">
    <h2 class="text-center">{{session.currentUser.username}}</h2>
  </div>

  <div class="form-group">
    <label>
      {{input type="checkbox" name="show_help" checked=session.currentUser.show_help}}
      Show help
    </label>
  </div>
  <div class="form-group">
    <label>
      {{input type="checkbox" name="enable_keyboard_shortcuts" checked=session.currentUser.enable_keyboard_shortcuts}}
      Enable keyboard shortcuts
    </label>
  </div>

  <button class="btn btn-default" {{action "toggleShowChangePassword"}}>change password</button>

  {{#if successMessage}}
    <div class="alert alert-success" role="alert">You changed your password!</div>
  {{/if}}

  {{#bs-collapse collapsed=changePasswordCollapsed}}
    <form {{action "updatePassword" on="submit"}} class="form-horizontal {{if errors 'has-error'}}">
      {{#if errors.non_field_errors}}
        {{#each errors.non_field_errors as |error|}}
          <span class="help-block">{{error}}</span>
        {{/each}}
      {{/if}}
      <div class="form-group {{if errors.old_password 'has-error'}}">
        <label for="old_password" class="col-sm-2 control-label">Old password</label>
        <div class="col-sm-10">
          {{focus-input type="password" name="old_password" value=old_password placeholder="Old password" class="form-control"}}
          {{#if errors.old_password}}
            {{#each errors.old_password as |error|}}
              <span class="help-block">{{error}}</span>
            {{/each}}
          {{/if}}
        </div>
      </div>
      <div class="form-group {{if errors.new_password1 'has-error'}}">
        <label for="new_password1" class="col-sm-2 control-label">New password</label>
        <div class="col-sm-10">
          {{input type="password" name="new_password1" value=new_password1 placeholder="New password" class="form-control"}}
          {{#if errors.new_password1}}
            {{#each errors.new_password1 as |error|}}
              <span class="help-block">{{error}}</span>
            {{/each}}
          {{/if}}
        </div>
      </div>
      <div class="form-group {{if errors.new_password2 'has-error'}}">
        <label for="new_password2" class="col-sm-2 control-label">New password again</label>
        <div class="col-sm-10">
          {{input type="password" name="new_password2" value=new_password2 placeholder="New password again" class="form-control"}}
          {{#if errors.new_password2}}
            {{#each errors.new_password2 as |error|}}
              <span class="help-block">{{error}}</span>
            {{/each}}
          {{/if}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button class="btn btn-default">change password</button>
        </div>
      </div>
    </form>
  {{/bs-collapse}}
</div>
