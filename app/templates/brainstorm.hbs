<div class="container">
  <div class="jumbotron">
    <h2 class="text-center">Braindump</h2>
    <p class="text-center">
      <small>Just put everything you have to do here, and we'll help you get it done.</small>
    </p>

    <form {{action "addTask" on="submit"}} class="form-horizontal">
      <div class="form-group">
        {{focus-input value=newTaskTitle class="form-control" placeholder='Task...'}}
      </div>
      <button type="submit" class="btn btn-default center-block">add it</button>
    </form>
  </div>

  {{messy-pile tasks=model}}
</div>
