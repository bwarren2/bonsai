<h2>Brainstorm</h2>

<form {{action "addTask" on="submit"}} class="form-inline">
  <div class="form-group">
    {{input value=newTaskTitle class="form-control" placeholder='Task...'}}
  </div>
  <button type="submit" class="btn btn-default">add task</button>
</form>

<ul>
{{#each model as |task|}}
  <li>{{task.title}}</li>
{{else}}
  <li>No task</li>
{{/each}}
</ul>
