<div class="container">
  <h2>Refine</h2>

  <div class="action-area well">
    {{#if activeTask}}
      <div class="task-card well">
        <div class="actions btn-group">
          <button class="btn btn-default" {{action 'do' activeTask}} aria-label="do">
            do
          </button>
          <button class="btn btn-default" {{action 'defer' activeTask}} aria-label="defer">
            defer
          </button>
          <button class="btn btn-default" {{action 'delegate' activeTask}} aria-label="delegate">
            delegate
          </button>
          <button class="btn btn-default" {{action 'destroy' activeTask}} aria-label="destroy">
            destroy
          </button>
        </div>
        {{activeTask.title}}
      </div>
    {{/if}}
  </div>

  <div class="row messy-stack">
    {{#each inactiveTasks as |task index|}}
      <div class="task-card well col-md-6 col-md-offset-3" style="z-index: {{math 1000 "-" index}}">
        {{task.title}}
      </div>
    {{/each}}
  </div>
</div>
