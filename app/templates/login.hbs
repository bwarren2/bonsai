<div class="container">
  <div class="row">
    <form {{action 'authenticate' on='submit'}} class="form-horizontal {{if errorMessage.non_field_errors 'has-error'}}">
      <div class="form-group {{if errorMessage.username 'has-error'}}">
        <label for="identification" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          {{focus-input id='identification' placeholder='Username' value=identification class="form-control"}}
          {{#if errorMessage.username}}
            <span class="help-block">{{errorMessage.username}}</span>
          {{/if}}
        </div>
      </div>
      <div class="form-group {{if errorMessage.password 'has-error'}}">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          {{input id='password' placeholder='Password' type='password' value=password class="form-control"}}
          {{#if errorMessage.password}}
            <span class="help-block">{{errorMessage.password}}</span>
          {{/if}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Login</button>
          {{#if errorMessage.non_field_errors}}
            <span class="help-block">{{errorMessage.non_field_errors}}</span>
          {{/if}}
        </div>
      </div>
    </form>
  </div>
</div>
