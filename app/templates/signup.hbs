<div class="container no-pulldown">
  <div class="row">
    <form {{action 'signUp' on='submit'}} class="form-horizontal {{if errorMessage.non_field_errors 'has-error'}}">
      <div class="form-group {{if errorMessage.username 'has-error'}}">
        <label for="username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          {{focus-input id='username' placeholder='Username' value=username class="form-control"}}
          {{#if errorMessage.username}}
            <span class="help-block">{{errorMessage.username}}</span>
          {{/if}}
        </div>
      </div>
      <div class="form-group {{if errorMessage.email 'has-error'}}">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          {{input id='email' placeholder='Email' value=email class="form-control"}}
          {{#if errorMessage.email}}
            <span class="help-block">{{errorMessage.email}}</span>
          {{/if}}
        </div>
      </div>
      <div class="form-group {{if errorMessage.password1 'has-error'}}">
        <label for="password1" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          {{input id='password1' placeholder='Password' type='password' value=password1 class="form-control"}}
          {{#if errorMessage.password1}}
            <span class="help-block">{{errorMessage.password1}}</span>
          {{/if}}
        </div>
      </div>
      <div class="form-group {{if errorMessage.password2 'has-error'}}">
        <label for="password2" class="col-sm-2 control-label">Password again</label>
        <div class="col-sm-10">
          {{input id='password2' placeholder='Password again' type='password' value=password2 class="form-control"}}
          {{#if errorMessage.password2}}
            <span class="help-block">{{errorMessage.password2}}</span>
          {{/if}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Login</button>
          {{#if errorMessage.non_field_errors}}
            <span class="help-block">{{errorMessage.non_field_errors}}</span>
          {{/if}}
          {{#if successMessage}}
            <span class="help-block success-message">{{successMessage}}</span>
          {{/if}}
        </div>
      </div>
    </form>
  </div>
</div>
