{{#ember-wormhole to="deck-picker"}}
  {{deck-picker data=decks}}
{{/ember-wormhole}}

{{#ember-wormhole to="out-box"}}
  <div class="out-box">
    <img src="/images/manilla-folder.png">
    <img src="/images/manilla-folder.png">
  </div>
{{/ember-wormhole}}

<div class="container">
  {{cartoon-modal kind="brainstorm" help=session.currentUser.show_help_brainstorm}}

  <form {{action "addTask" on="submit"}} class="form-horizontal">
    <div class="form-group">
      {{focus-input value=newTaskTitle class="form-control" placeholder='Task...'}}
    </div>
    <button type="submit" class="btn btn-default center-block">add it</button>
  </form>

  <hr>

  {{messy-pile tasks=filteredTasks}}
</div>
